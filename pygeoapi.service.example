[Unit]
Description=A systemd unit to run pygeoapi
After=syslog.target network.target

[Service]

# PermissionsStartOnly = true
User=ubuntu
Group=ubuntu

Type=simple
# Type=notify
# NotifyAccess=all

WorkingDirectory=

Environment="LC_ALL=C.UTF-8"
Environment="LC_LANG=C.UTF-8"
Environment="LANG=C.UTF-8"
EnvironmentFile=

ExecStart=

ExecReload=/bin/kill -s HUP $MAINPID
ExecStop = /bin/kill -s TERM $MAINPID
KillMode=mixed
TimeoutStopSec=5
PrivateTmp=true

[Install]
WantedBy=multi-user.target

